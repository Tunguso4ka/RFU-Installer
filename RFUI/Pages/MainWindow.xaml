<Window x:Class="RFUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RFUI"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanMinimize"
        Title="MainWindow" Height="500" Width="700">
    <Grid>
        <ProgressBar Name="ProgressBar" IsIndeterminate="True" Height="25" VerticalAlignment="Top" Background="Transparent" BorderBrush="Transparent" Visibility="Collapsed" Margin="0,0,70,0"/>
        <StackPanel Orientation="Horizontal" Height="25" VerticalAlignment="Top" HorizontalAlignment="Right">
            <Button Content="" FontFamily="Segoe MDL2 Assets" Name="Minimize" Click="Button_Click" ToolTip="Minimize" Tag="Minimize"/>
            <Button Content="" FontFamily="Segoe MDL2 Assets" Name="Close" Click="Button_Click" ToolTip="Close" Tag="Close"/>
        </StackPanel>
        <Frame Margin="0,25,0,0" Name="Frame0"/>
    </Grid>
</Window>
