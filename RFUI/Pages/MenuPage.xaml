<Page x:Class="RFUI.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RFUI"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="200"
      Title="MenuPage">

    <StackPanel Orientation="Vertical" Margin="0,25,0,0">
        <Button Content="RFUpdater" Style="{StaticResource MenuButton}" Name="App" Click="Button_Click" ToolTip="RFUpdater" Tag="App"/>
        <Button Content="" Style="{StaticResource MenuButton}"/>
        <Button Content="Change theme" Style="{StaticResource MenuButton}" Name="ChangeTheme" Click="Button_Click" ToolTip="Change theme" Tag="ChangeTheme"/>
        <Button Content="About" Style="{StaticResource MenuButton}" Name="About" Click="Button_Click" ToolTip="About" Tag="About"/>
        <Button Content="Exit" Style="{StaticResource MenuButton}" Name="Exit" Click="Button_Click" ToolTip="Exit" Tag="Exit"/>
    </StackPanel>
</Page>
